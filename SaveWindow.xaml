<Window x:Class="DnD_CharSheet_5e.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_CharSheet_5e"
        mc:Ignorable="d"
        Title="Save Character" Height="500" Width="800">

    <Window.Resources>

        <Style TargetType="Button" x:Key="SaveSlotBtn" BasedOn="{StaticResource StandardBtn}">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="500"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
        
    </Window.Resources>

    <StackPanel Background="AliceBlue">

        <Button x:Name="saveGame_01_bt" Content="Empty Slot" Click="SaveGame01_BT_Click" Margin="0 50 0 20" Style="{StaticResource SaveSlotBtn}"/>
        <Button x:Name="saveGame_02_bt" Content="Empty Slot" Click="SaveGame02_BT_Click" Margin="20" Style="{StaticResource SaveSlotBtn}"/>
        <Button x:Name="saveGame_03_bt" Content="Empty Slot" Click="SaveGame03_BT_Click" Margin="20" Style="{StaticResource SaveSlotBtn}"/>
        <Button x:Name="saveGame_04_bt" Content="Empty Slot" Click="SaveGame04_BT_Click" Margin="20" Style="{StaticResource SaveSlotBtn}"/>
        <Button x:Name="saveGame_05_bt" Content="Empty Slot" Click="SaveGame05_BT_Click" Margin="20" Style="{StaticResource SaveSlotBtn}"/>
        

    </StackPanel>
    
</Window>
