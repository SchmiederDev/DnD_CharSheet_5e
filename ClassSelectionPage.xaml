<Page x:Class="DnD_CharSheet_5e.ClassSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnD_CharSheet_5e"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClassSelectionPage">

    <StackPanel>

        <TextBlock Text="Class Menu" Margin="15" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
        
        <Border Margin="10" BorderBrush="SlateGray" Background="Thistle" BorderThickness="2" Width="500">
            <TextBlock Text="Please choose a Class for your character from the menu below. On the following pages you will have the opportunity to choose from several options for the Class you chose, e. g. the skill proficiencies of the Class." 
                       Padding="5" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </Border>
        
    </StackPanel>
    
</Page>
