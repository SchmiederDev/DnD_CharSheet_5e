<Window x:Class="DnD_CharSheet_5e.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_CharSheet_5e"
        mc:Ignorable="d"
        Title="DnD 5e Character Sheet" Height="1000" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <Style TargetType="TextBlock" x:Key="BasicsHeader" BasedOn="{StaticResource StandardText}">            
            <Setter Property="Margin" Value="5 5 0 5"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="BasicCaption">
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SkillCaption" BasedOn="{StaticResource BasicCaption}">
            <Setter Property="Margin" Value="0 9.5"/>
        </Style>

        <Style TargetType="Button" x:Key="SkillBtn" BasedOn="{StaticResource SmallBtn}">
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0 7.5"/>
        </Style>
        
        <Style TargetType="Border" x:Key="BasicsBorder">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4c7f7f"/>
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10 0 0 0"/>

        </Style>

        <Style TargetType="TextBox" x:Key="BasicsInputField" BasedOn="{StaticResource InputField}">
            <Setter Property="Margin" Value="10 5 0 20"/>
        </Style>

        <Style TargetType="CheckBox" x:Key="SkillCB">
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 10"/>
        </Style>

        <Style TargetType="TextBox" x:Key="SkillModBox" BasedOn="{StaticResource SmallValueBox}">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0 7.5"/>
            <Setter Property="IsEnabled" Value="False"/>
        </Style>

        <Style TargetType="TextBox" x:Key="SkillResBox" BasedOn="{StaticResource SmallResultBox}">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0 7.5"/>
            <Setter Property="IsEnabled" Value="False"/>            
        </Style>

        <Style TargetType="Button" x:Key="MainMenuBtn" BasedOn="{StaticResource EditBtn}"> 
            
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="170"/>
            
        </Style>
        
    </Window.Resources>

    <StackPanel>

        <!-- Consider using Labels in a few spots - since they may e.g. specify a border directly -->
        <TextBlock Text="Dungeons &amp; Dragons 5e - Character Sheet" Foreground="#343434" FontFamily="Cambria" FontStyle="Italic" Margin="0 10 0 10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontWeight="Bold"/>

        <Grid>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>

            </Grid.ColumnDefinitions>

            <Border Margin="10 90 10 100" Style="{StaticResource StandardBorder}" Grid.Column="0">

                <StackPanel Background="AliceBlue">

                    <Button x:Name="NewCharButton" Content="New Character" Click="NewCharButton_Click" Margin ="0 15 0 5" Style="{StaticResource MainMenuBtn}"/>
                    <Button x:Name="ApplyButton" Content="Apply Character" Click="ApplyCharButton_Click" IsEnabled="False" Margin ="15 10 10 5" Style="{StaticResource MainMenuBtn}"/>

                    <Button x:Name="BackgroundPage_bt" IsEnabled="False" Content="Background" Click="BackgroundPageButton_Click" Margin ="15 40 10 5" Style="{StaticResource MainMenuBtn}"/>
                    <Button x:Name="SpellWindow_bt" Content="Spells" IsEnabled="False" Click="SpellWindow_bt_Click" Margin ="15 10 10 5" Style="{StaticResource MainMenuBtn}"/>

                    <Button x:Name="CombatWindow_bt" IsEnabled="False" Content="Combat" Click="CombatWindow_bt_Click" Margin ="15 40 10 5" Style="{StaticResource MainMenuBtn}"/>
                    <Button x:Name="DiceMachineWindow_bt" IsEnabled="False" Content="Dice Machine" Click="DiceMachineWindow_bt_Click" Margin ="15 10 10 5" Style="{StaticResource MainMenuBtn}"/>

                    <Button x:Name="Inventory_bt" IsEnabled="False" Click="InventoryWindow_bt_Click" Content="Inventory" Margin ="15 40 10 5" Style="{StaticResource MainMenuBtn}"/>
                    <Button x:Name="Merchant_bt" IsEnabled="False" Click="MerchantWindow_bt_Click" Content="Merchant" Margin ="15 10 10 5" Style="{StaticResource MainMenuBtn}"/>

                    <Button x:Name="saveCharButton" Content="Save Character" IsEnabled="False" Click="SaveScreen_bt_Click" Margin ="15 40 10 5" Style="{StaticResource MainMenuBtn}"/>
                    <Button x:Name="loadCharButton" Content="Load Character" Click="LoadPage_bt_Click" Margin ="15 10 10 5" Style="{StaticResource MainMenuBtn}"/>

                </StackPanel>

            </Border>

            <StackPanel x:Name="MainPanel" Orientation="Vertical" MaxHeight="1000" Grid.Column="1">

                <Grid Margin="0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="AliceBlue" Height="40" Width="150" HorizontalAlignment="Right" Margin="0 0 5 0" Style="{StaticResource StandardBorder}" Grid.Column="0">
                        <TextBlock Text="Character:" Foreground="#343434" Style="{StaticResource H2_Header}" VerticalAlignment="Center"/>
                    </Border>

                    <TextBox x:Name="CharNameText" IsEnabled="False" Padding="10 0 0 0" Margin="5 10 12 10" Width="250" Height="40" HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="20" FontFamily="Georgia" FontWeight="Bold" Grid.Column="1"/>

                </Grid>

                <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">

                    <StackPanel MaxHeight="850">

                        <Grid Margin="10 10">
                            
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">

                                <Border Style="{StaticResource BasicsBorder}">
                                    <TextBlock Text="Player:" Style="{StaticResource BasicsHeader}"/>
                                </Border>
                                <TextBox x:Name="PlayerNameText" IsEnabled="False" Style="{StaticResource BasicsInputField}"/>

                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <Border Style="{StaticResource BasicsBorder}">
                                    <TextBlock Text="Race: " Style="{StaticResource BasicsHeader}"/>
                                </Border>
                                <TextBox x:Name="RaceBox" IsEnabled="False" Style="{StaticResource BasicsInputField}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Border Style="{StaticResource BasicsBorder}">
                                    <TextBlock Text="Subrace: " Style="{StaticResource BasicsHeader}"/>
                                </Border>
                                <TextBox x:Name="SubRaceBox" IsEnabled="False" Style="{StaticResource BasicsInputField}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">

                                <Border Style="{StaticResource BasicsBorder}">
                                    <TextBlock Text="Alignment:"  Style="{StaticResource BasicsHeader}"/>
                                </Border>
                                
                                <ComboBox x:Name="AlignmentBox" IsEnabled="False" SelectedIndex = "0" Width="200" Height="25" Margin="2 5 10 20" FontWeight="Bold" FontFamily="Cambria">

                                    <ComboBoxItem ></ComboBoxItem>
                                    <ComboBoxItem>Lawful Good</ComboBoxItem>
                                    <ComboBoxItem>Neutral Good</ComboBoxItem>
                                    <ComboBoxItem>Chaotic Good</ComboBoxItem>
                                    <ComboBoxItem>Lawful Neutral</ComboBoxItem>
                                    <ComboBoxItem>Neutral</ComboBoxItem>
                                    <ComboBoxItem>Chaotic Neutral</ComboBoxItem>
                                    <ComboBoxItem>Lawful Evil</ComboBoxItem>
                                    <ComboBoxItem>Neutral Evil</ComboBoxItem>
                                    <ComboBoxItem>Chaotic Evil</ComboBoxItem>

                                </ComboBox>

                            </StackPanel>

                        </Grid>

                        <Grid Margin="10 10">
                            
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="*"/>                                
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <Border Style="{StaticResource BasicsBorder}">
                                    <TextBlock Text="Class: "  Style="{StaticResource BasicsHeader}"/>
                                </Border>
                                <TextBox x:Name="ClassBox" IsEnabled ="False" Style="{StaticResource BasicsInputField}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">

                                <Border Style="{StaticResource BasicsBorder}">
                                    <TextBlock Text="Level: " Style="{StaticResource BasicsHeader}"/>
                                </Border>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="LevelText" IsEnabled="False" Margin="10 0 0 0" HorizontalAlignment="Left" Style="{StaticResource SmallValueBox}" Grid.Column="0"/>
                                    <Button x:Name="Level_Up_bt" IsEnabled="False" Content="+" Click="LevelUpButton_Click" Margin="0 10 20 10" Height="30" Width="30" HorizontalAlignment="Right" VerticalContentAlignment="Top" Style="{StaticResource StandardBtn}" FontSize="18" FontWeight="Bold" Grid.Column="1"/>

                                </Grid>

                            </StackPanel>                            

                            <StackPanel Grid.Column="3">

                                <Border Style="{StaticResource BasicsBorder}">
                                    <TextBlock Text="Background:"  Style="{StaticResource BasicsHeader}" Grid.Column="2"/>
                                </Border>
                                <TextBox x:Name="BackgroundBox" IsEnabled="False" Style="{StaticResource BasicsInputField}"/>

                            </StackPanel>

                        </Grid>

                        <Grid Margin="0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Armor Class (AC)" Style="{StaticResource BasicsHeader}" Margin="0 0 0 5" HorizontalAlignment="Center" FontSize="14"/>
                                <TextBox x:Name="AC" IsEnabled="False" Style="{StaticResource ValueBox_LargeSquare}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>

                            <Grid Grid.Column="1">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Initiative" Style="{StaticResource BasicsHeader}" Margin="0 0 0 5" HorizontalAlignment="Right" FontSize="14"/>
                                    <TextBox x:Name="iniBonus" IsEnabled ="False" Margin="5 0 10 0" Style="{StaticResource ValueBox_LargeSquare}" HorizontalAlignment="Right" FontSize="20"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <Button x:Name="iniButton" IsEnabled="False" Click ="IniButton_Click" Height="20" Width="50" Margin="10 20 0 0" HorizontalAlignment="Left" Style="{StaticResource StandardBtn}"/>
                                    <TextBox x:Name="iniResult" IsEnabled ="False" Height="20" Width="50" Margin="10 10" HorizontalAlignment="Left" Style="{StaticResource SmallResultBox}"/>

                                </StackPanel>

                            </Grid>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Speed" Style="{StaticResource BasicsHeader}" Margin="0 0 0 5" HorizontalAlignment="Center" FontSize="14"/>
                                <TextBox x:Name="baseSpeed" IsEnabled="False" Style="{StaticResource ValueBox_LargeSquare}" Margin="5 0 0 0" HorizontalAlignment="Center" FontSize="20"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Proficiency Bonus: " Margin="0 0 0 5" HorizontalAlignment="Center" Style="{StaticResource BasicsHeader}" FontSize="14" Grid.Column="4"/>
                                <TextBox x:Name="ProfBonus_Box" IsEnabled="False" Style="{StaticResource ValueBox_LargeSquare}" FontSize="20" Grid.Column="5"/>

                            </StackPanel>

                        </Grid>                        

                        <Grid Margin="0 20">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Hitpoints(Max.):" Margin="10 0" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource BasicsHeader}" FontSize="16" Grid.Column="0"/>
                            <TextBox x:Name="maxHPtext" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource SmallValueBox}" Grid.Column="1"/>
                            <TextBlock Text="Current HP:" Margin="10 0" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource BasicsHeader}" FontSize="16" Grid.Column="2"/>
                            <TextBox x:Name="currHPtext" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource SmallValueBox}" Grid.Column="3"/>
                            <TextBlock Text="Temporary HP:" Margin="10 0" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource BasicsHeader}" FontSize="16" Grid.Column="4"/>
                            <TextBox x:Name="tempHPtext" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource SmallValueBox}" Grid.Column="5"/>

                        </Grid>

                        <Grid Margin="0 20">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="0.5*"/>

                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Hit Dice (Total):" HorizontalAlignment="Right" Margin="10 0" VerticalAlignment="Center" Style="{StaticResource BasicsHeader}" FontSize="16" Grid.Column="0"/>
                            <TextBox x:Name="HDtext" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource SmallValueBox}" Grid.Column="1"/>
                            <TextBlock Text="Current Hit Dice:" HorizontalAlignment="Right" Margin="10 0" VerticalAlignment="Center" Style="{StaticResource BasicsHeader}" FontSize="16" Grid.Column="2"/>
                            <TextBox x:Name="currHDtext" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource SmallValueBox}" Grid.Column="3"/>                            

                        </Grid>

                        

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="5 30" Grid.Column="0">

                                <TextBlock Text="Ability Scores" Margin="0 0 0 5" Style="{StaticResource MainHeader}"/>

                                <Border Style="{StaticResource StandardBorder}">

                                    <StackPanel>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Score" Margin="0 20 0 5" Style="{StaticResource BasicsHeader}" Grid.Column="1"/>
                                            <TextBlock Text="Modifier" Margin="0 20 0 5" Style="{StaticResource BasicsHeader}" Grid.Column="2"/>
                                            <TextBlock Text="Result" Margin="0 20 0 5" Style="{StaticResource BasicsHeader}" Grid.Column="4"/>

                                        </Grid>

                                        <Grid>

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Strength (STR)" Margin="10 12 10 10" Style="{StaticResource BasicsHeader}" FontSize="18" Grid.Column="0"/>
                                            <TextBox x:Name="strScoreText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" IsEnabled="False" Grid.Column="1"/>
                                            <TextBox x:Name="strModifierText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" Grid.Column="2" IsEnabled="false"/>
                                            <Button x:Name="strRoll_bt" Content="Roll" Click="StrButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumBtn}" IsEnabled="False" Grid.Column="3"/>
                                            <TextBox x:Name="strengthResult" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumResultBox}" Grid.Column="4" IsEnabled="false"/>

                                        </Grid>

                                        <Grid>

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Dexterity (DEX)" Margin="10 10 10 10" Style="{StaticResource BasicsHeader}" FontSize="18" Grid.Column="0"/>
                                            <TextBox x:Name="dexScoreText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" IsEnabled="False" Grid.Column="1"/>
                                            <TextBox x:Name="dexModifierText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" Grid.Column="2" IsEnabled="false"/>
                                            <Button x:Name="dexRoll_bt" Content="Roll" Click="DexButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumBtn}" IsEnabled="False" Grid.Column="3"/>
                                            <TextBox x:Name="dexResult" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumResultBox}" Grid.Column="4" IsEnabled="false"/>

                                        </Grid>

                                        <Grid>

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Constitution (CON)" Margin="10 10 10 10" Style="{StaticResource BasicsHeader}" FontSize="18" Grid.Column="0"/>
                                            <TextBox x:Name="conScoreText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" IsEnabled="False" Grid.Column="1"/>
                                            <TextBox x:Name="conModifierText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" Grid.Column="2" IsEnabled="false"/>
                                            <Button x:Name="conRoll_bt" Content="Roll" Click="ConButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumBtn}" IsEnabled="False" Grid.Column="3"/>
                                            <TextBox x:Name="conResult" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumResultBox}" Grid.Column="4" IsEnabled="false"/>

                                        </Grid>

                                        <Grid>

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Intelligence (INT)" Margin="10 10 10 10" Style="{StaticResource BasicsHeader}" FontSize="18" Grid.Column="0"/>
                                            <TextBox x:Name="intScoreText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" Width="60" IsEnabled="False" Grid.Column="1"/>
                                            <TextBox x:Name="intModifierText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" Grid.Column="2" IsEnabled="false"/>
                                            <Button x:Name="intRoll_bt" Content="Roll" Click="IntButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumBtn}" IsEnabled="False" Grid.Column="3"/>
                                            <TextBox x:Name="intResult" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumResultBox}" Grid.Column="4" IsEnabled="false"/>

                                        </Grid>

                                        <Grid>

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Wisdom (WIS)" Margin="10 10 10 10" Style="{StaticResource BasicsHeader}" FontSize="18" Grid.Column="0"/>
                                            <TextBox x:Name="wisScoreText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" IsEnabled="False" Grid.Column="1"/>
                                            <TextBox x:Name="wisModifierText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" Grid.Column="2" IsEnabled="false"/>
                                            <Button x:Name="wisRoll_bt" Content="Roll" Click="WisButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumBtn}" IsEnabled="False" Grid.Column="3"/>
                                            <TextBox x:Name="wisResult" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumResultBox}" Grid.Column="4" IsEnabled="false"/>

                                        </Grid>

                                        <Grid Margin="0 0 0 20">

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>
                                                <ColumnDefinition Width="0.75*"/>

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Charisma (CHA)" Margin="10 10 10 10" Style="{StaticResource BasicsHeader}" FontSize="18" Grid.Column="0"/>
                                            <TextBox x:Name="chaScoreText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" IsEnabled="False" Grid.Column="1"/>
                                            <TextBox x:Name="chaModifierText" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumValueBox}" Grid.Column="2" IsEnabled="false"/>
                                            <Button x:Name="chaRoll_bt" Content="Roll" Click="ChaButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumBtn}" IsEnabled="False" Grid.Column="3"/>
                                            <TextBox x:Name="chaResult" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource MediumResultBox}" Grid.Column="4" IsEnabled="false"/>

                                        </Grid>

                                    </StackPanel>

                                </Border>

                            </StackPanel>

                            <StackPanel Margin="5 25" Grid.Column="1">

                                <TextBlock Text="Saving Throws" Margin="0 5" Style="{StaticResource MainHeader}"/>

                                <Border BorderBrush="#bb8fbb" Style="{StaticResource StandardBorder}">

                                    <StackPanel>

                                        <Grid Margin="0 15 0 5">

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width ="0.5*"/>
                                                <ColumnDefinition Width ="2.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Modifier" HorizontalAlignment="Center" FontSize="10" Style="{StaticResource StandardText}" Grid.Column="2"/>
                                            <TextBlock Text="Result" Margin="10 0" FontSize="10" Style="{StaticResource StandardText}" Grid.Column="4"/>

                                        </Grid>

                                        <Grid Margin="0 0 0 10">

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width ="0.5*"/>
                                                <ColumnDefinition Width ="2.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>

                                            </Grid.ColumnDefinitions>

                                            <CheckBox x:Name="saveProf_STR" IsEnabled="False" Margin="5 10 0 10" Grid.Column="0"/>
                                            <TextBlock Text="Strength" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0" Style="{StaticResource StandardText}" FontSize="14" Grid.Column="1"/>
                                            <TextBox x:Name="STRsave_Val" IsEnabled="False"  Style="{StaticResource SmallValueBox}" Grid.Column="2"/>
                                            <Button x:Name="STRsave_roll" Click="STR_Save_bt_Click" IsEnabled="False" Content="Roll" Style="{StaticResource SmallBtn}" Grid.Column="3"/>
                                            <TextBox x:Name="STRsave_Result" IsEnabled="False" Style="{StaticResource SmallResultBox}" Grid.Column="4"/>

                                        </Grid>

                                        <Grid Margin="0 0 0 10">

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width ="0.5*"/>
                                                <ColumnDefinition Width ="2.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>

                                            </Grid.ColumnDefinitions>

                                            <CheckBox x:Name="saveProf_DEX" IsEnabled="False" Margin="5 10 0 10" Grid.Column="0"/>
                                            <TextBlock Text="Dexterity" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0" Style="{StaticResource StandardText}" FontSize="14" Grid.Column="1"/>
                                            <TextBox x:Name="DEXsave_Val" IsEnabled="False"  Style="{StaticResource SmallValueBox}" Grid.Column="2"/>
                                            <Button x:Name="DEXsave_roll" Click="DEX_Save_bt_Click" IsEnabled="False" Content="Roll" Style="{StaticResource SmallBtn}" Grid.Column="3"/>
                                            <TextBox x:Name="DEXsave_Result" IsEnabled="False" Style="{StaticResource SmallResultBox}" Grid.Column="4"/>

                                        </Grid>

                                        <Grid Margin="0 0 0 10">

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width ="0.5*"/>
                                                <ColumnDefinition Width ="2.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>

                                            </Grid.ColumnDefinitions>

                                            <CheckBox x:Name="saveProf_CON" IsEnabled="False" Margin="5 10 0 10" Grid.Column="0"/>
                                            <TextBlock Text="Constitution" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0" Style="{StaticResource StandardText}" FontSize="14" Grid.Column="1"/>
                                            <TextBox x:Name="CONsave_Val" IsEnabled="False" Style="{StaticResource SmallValueBox}" Grid.Column="2"/>
                                            <Button x:Name="CONsave_roll" Click="CON_Save_bt_Click" IsEnabled="False" Content="Roll" Style="{StaticResource SmallBtn}" Grid.Column="3"/>
                                            <TextBox x:Name="CONsave_Result" IsEnabled="False" Style="{StaticResource SmallResultBox}" Grid.Column="4"/>

                                        </Grid>

                                        <Grid Margin="0 0 0 10">

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width ="0.5*"/>
                                                <ColumnDefinition Width ="2.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>
                                                <ColumnDefinition Width ="1.25*"/>

                                            </Grid.ColumnDefinitions>

