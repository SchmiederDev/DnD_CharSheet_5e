<Window x:Class="DnD_CharSheet_5e.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_CharSheet_5e"
        mc:Ignorable="d"
        Title="DnD 5e Character Sheet" Height="950" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Border Padding="10">
        
        <StackPanel>

            <Grid>
                
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4*"/>

                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">

                    <Button x:Name="NewCharButton" Click="NewCharButton_Click" Content="New Character" Margin ="15 50 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>
                    <Button x:Name="ApplyButton" IsEnabled="False" Click="ApplyCharButton_Click" Content="Apply Character" Margin ="15 10 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>

                    <Button x:Name="CreateCharButton" Click="CreateCharButton_Click" Content="Create Character" Margin="15 35 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>
                    
                    <Button x:Name="saveCharButton" Content="Save Character" IsEnabled="False" Click="SaveScreen_bt_Click" Margin ="15 50 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>
                    <Button x:Name="loadCharButton" Content="Load Character" Click="LoadPage_bt_Click" Margin ="15 10 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>

                    <Button x:Name="SpellWindow_bt" Content="Spells" IsEnabled="False" Click="SpellWindow_bt_Click" Margin ="15 40 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>

                    <Button x:Name="CombatWindow_bt" IsEnabled="False" Content="Combat" Click="CombatWindow_bt_Click" Margin ="15 20 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>
                    <Button x:Name="DiceMachineWindow_bt" IsEnabled="False" Content="Dice Machine" Click="DiceMachineWindow_bt_Click" Margin ="15 20 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>


                    <Button x:Name="BackgroundPage_bt" IsEnabled="False" Content="Background" Click="BackgroundPageButton_Click" Margin ="15 25 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>
                    <Button x:Name="Inventory_bt" IsEnabled="False" Click="InventoryWindow_bt_Click" Content="Inventory" Margin ="15 25 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>
                    <Button x:Name="Merchant_bt" IsEnabled="False" Click="MerchantWindow_bt_Click" Content="Merchant" Margin ="15 50 10 5" FontWeight="Bold" FontFamily="Times New Roman"/>

                </StackPanel>

                <ScrollViewer x:Name="MainPanelViewer" CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Column="1">

                    <StackPanel x:Name="MainPanel" Orientation="Vertical" MaxHeight="850">

                        <Grid>
                            <!-- Spieler, SC, Gesinnung Text-->
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <!-- Alternative zu 'TextBlock' = 'Label', aber sehr eingeschränkte Möglichkeiten -->
                            <TextBlock Text="Character Name:" Margin="10 20 10 0" FontWeight="Bold" FontFamily="Times New Roman" Grid.Column="0"/>
                            <!-- Normalerweise <Textblock> [...] </Textblock> kann so wie hier verkürzt werden -->
                            <TextBlock Text="Player Name:" Margin="10 20 10 0" FontWeight="Bold" FontFamily="Times New Roman" Grid.Column="1"/>
                            <TextBlock Text="Alignment:" Margin="10 20 10 0" FontWeight="Bold" FontFamily="Times New Roman" Grid.Column="2"/>
                            <TextBlock Text="Background:" Margin="10 20 10 0" FontWeight="Bold" FontFamily="Times New Roman" Grid.Column="3"/>

                        </Grid>

                        <Grid>
                            <!-- Spieler, SC, Gesinnung Steuerelemente-->

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="*"/>
                                <!-- ein '*' = gleiche Aufteilung, 3x '*' = ein Drittel; '2*' bedeutet dieses Element nimmt doppelt so viel Platz ein, wie die anderen Elemente des Grid/Panel -->
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="CharNameText" Padding="2" Margin="10 10 12 10" IsEnabled="False" Grid.Column="0"/>
                            <!-- Kann mit 'IsReadOnly' oder 'IsEnabled' für Eingabe gesperrt werden; mit 'Background' kann eine Hintergrundfarbe via Hexadezimalcode festgelegt werden -->
                            <TextBox x:Name="PlayerNameText" Padding="2" Margin="10 10 12 10" IsEnabled="False" Grid.Column="1"/>

                            <!-- Alignment Menu -->
                            <ComboBox x:Name="AlignmentBox" SelectedIndex = "0" Margin="10 10 30 10" FontWeight="Bold" IsEnabled="False" Grid.Column="2">

                                <ComboBoxItem></ComboBoxItem>
                                <ComboBoxItem>Lawful Good</ComboBoxItem>
                                <ComboBoxItem>Neutral Good</ComboBoxItem>
                                <ComboBoxItem>Chaotic Good</ComboBoxItem>
                                <ComboBoxItem>Lawful Neutral</ComboBoxItem>
                                <ComboBoxItem>Neutral</ComboBoxItem>
                                <ComboBoxItem>Chaotic Neutral</ComboBoxItem>
                                <ComboBoxItem>Lawful Evil</ComboBoxItem>
                                <ComboBoxItem>Neutral Evil</ComboBoxItem>
                                <ComboBoxItem>Chaotic Evil</ComboBoxItem>

                            </ComboBox>

                            <ComboBox x:Name="BackgroundBox" SelectedIndex = "0" Margin="10 10 30 10" FontWeight="Bold" IsEnabled="False" Grid.Column="3">

                                <ComboBoxItem></ComboBoxItem>
                                <ComboBoxItem>Acolyte</ComboBoxItem>
                                <ComboBoxItem>Charlatan</ComboBoxItem>
                                <ComboBoxItem>Criminal</ComboBoxItem>
                                <ComboBoxItem>Entertainer</ComboBoxItem>
                                <ComboBoxItem>Folk Hero</ComboBoxItem>
                                <ComboBoxItem>Guild Artisan</ComboBoxItem>
                                <ComboBoxItem>Hermit</ComboBoxItem>
                                <ComboBoxItem>Noble</ComboBoxItem>
                                <ComboBoxItem>Outlander</ComboBoxItem>
                                <ComboBoxItem>Sage</ComboBoxItem>
                                <ComboBoxItem>Sailor</ComboBoxItem>
                                <ComboBoxItem>Soldier</ComboBoxItem>
                                <ComboBoxItem>Urchin</ComboBoxItem>

                            </ComboBox>

                        </Grid>

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <!-- Race, Subrace, Class Text-->
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>


                            <TextBlock Text="Level: " Margin="10 10 0 0" FontWeight="Bold" FontFamily="Times New Roman" Grid.Column="0"/>
                            <TextBlock Text="Race: " Margin="10 10 0 0" FontWeight="Bold" FontFamily="Times New Roman" Grid.Column="2"/>
                            <TextBlock Text="Subrace: " Margin="10 10 0 0" FontWeight="Bold" FontFamily="Times New Roman" Grid.Column="3"/>
                            <TextBlock Text="Class: " Margin="10 10 0 0" FontWeight="Bold" FontFamily="Times New Roman" Grid.Column="4"/>

                        </Grid>

                        <Grid>
                            <!-- Level/ Race/ Subrace/ Class Steuerelemente -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="LevelText" IsEnabled="False" Margin="5 0 0 0" Padding="2" Height="25" Width="50" Grid.Column="0"/>

                            <Button x:Name="Level_Up_bt" IsEnabled="False" Content="+" Click="LevelUpButton_Click" Margin="0 10 0 10" Height="20" Width="20" Grid.Column="1"/>

                            <!-- Race Menu-->
                            <ComboBox x:Name="RaceMenu" SelectedIndex = "0" Padding="2" Margin="10 15 0 15" FontWeight="Bold" IsEnabled="False" Grid.Column="2">

                                <!-- Über 'SelectedIndex' kann die default-Auswahl für die ComboBox festgelegt werden -->

                                <ComboBoxItem></ComboBoxItem>
                                <ComboBoxItem>Dragonborn</ComboBoxItem>
                                <ComboBoxItem>Dwarf</ComboBoxItem>
                                <ComboBoxItem>Elf</ComboBoxItem>
                                <ComboBoxItem>Gnome</ComboBoxItem>
                                <ComboBoxItem>Half-Elf</ComboBoxItem>
                                <ComboBoxItem>Half-Orc</ComboBoxItem>
                                <ComboBoxItem>Halfling</ComboBoxItem>
                                <ComboBoxItem>Human</ComboBoxItem>
                                <ComboBoxItem>Tiefling</ComboBoxItem>

                            </ComboBox>

                            <!-- Subrace Menu -->
                            <ComboBox x:Name="SubRaceMenu" SelectedIndex = "0" Padding="2" Margin="10 15 0 15" FontWeight="Bold" IsEnabled="False" Grid.Column="3">

                                <ComboBoxItem></ComboBoxItem>
                                <ComboBoxItem>Drow</ComboBoxItem>
                                <ComboBoxItem>High Elf</ComboBoxItem>
                                <ComboBoxItem>Wood Elf</ComboBoxItem>
                                <ComboBoxItem>Hill Dwarf</ComboBoxItem>
                                <ComboBoxItem>Moutain Dwarf</ComboBoxItem>
                                <ComboBoxItem>Forest Gnome</ComboBoxItem>
                                <ComboBoxItem>Rock Gnome</ComboBoxItem>
                                <ComboBoxItem>Lightfood Halfling</ComboBoxItem>
                                <ComboBoxItem>Stout Halfling</ComboBoxItem>

                            </ComboBox>

                            <!-- Class Menu -->
                            <ComboBox x:Name="ClassMenu" SelectedIndex = "0" Padding="2" Margin="10 15 0 15" FontWeight="Bold" IsEnabled ="False" Grid.Column="4">

                                <ComboBoxItem></ComboBoxItem>
                                <ComboBoxItem>Barbarian</ComboBoxItem>
                                <ComboBoxItem>Bard</ComboBoxItem>
                                <ComboBoxItem>Cleric</ComboBoxItem>
                                <ComboBoxItem>Druid</ComboBoxItem>
                                <ComboBoxItem>Fighter</ComboBoxItem>
                                <ComboBoxItem>Monk</ComboBoxItem>
                                <ComboBoxItem>Paladin</ComboBoxItem>
                                <ComboBoxItem>Ranger</ComboBoxItem>
                                <ComboBoxItem>Rogue</ComboBoxItem>
                                <ComboBoxItem>Sorcerer</ComboBoxItem>
                                <ComboBoxItem>Warlock</ComboBoxItem>
                                <ComboBoxItem>Wizard</ComboBoxItem>

                            </ComboBox>

                        </Grid>

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <TextBlock Text="HITPOINTS (Max.): " Margin="10 40 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="0"/>
                            <TextBox x:Name="maxHPtext" IsEnabled="False" Margin="0 35 0 10" Height="25"  Width="40" Grid.Column="1"/>
                            <TextBlock Text="CURRENT HP: " Margin="10 40 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="2"/>
                            <TextBox x:Name="currHPtext" IsEnabled="False" Margin="0 35 0 10" Height="25" Width="40" Grid.Column="3"/>
                            <TextBlock Text="TEMPORARY HP: " Margin="10 40 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="4"/>
                            <TextBox x:Name="tempHPtext" IsEnabled="False" Margin="0 35 0 10" Height="25"  Width="40" Grid.Column="5"/>

                        </Grid>

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <TextBlock Text="HIT DICE (Total): " Margin="10 15 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="0"/>
                            <TextBox x:Name="HDtext" IsEnabled="False" Margin="0 10 0 10" Height="25" Width ="40" Grid.Column="1"/>
                            <TextBlock Text="CURRENT HIT DICE: " Margin="0 15 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="2"/>
                            <TextBox x:Name="currHDtext" IsEnabled="False" Margin="0 10 0 10" Height="25" Width ="40" Grid.Column="3"/>
                            <TextBlock Text="PROFICIENCY BONUS: " Margin="0 15 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="4"/>
                            <TextBox x:Name="ProfBonus_Box" IsEnabled="False" Margin="0 10 0 10" Height="25" Width ="40" Grid.Column="5"/>

                        </Grid>

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <TextBlock Text="INITIATIVE:" Margin="10 30" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="0"/>
                            <TextBox x:Name="iniBonus" IsEnabled ="False" Height="25" Width="40" Grid.Column="1"/>
                            <Button x:Name="iniButton" IsEnabled="False" Click ="IniButton_Click" Content="Roll" Height="25" Width="40" Grid.Column="2"/>
                            <TextBox x:Name="iniResult" IsEnabled ="False" Height="25" Width="40" Grid.Column="3"/>
                            <TextBlock Text="ARMOR CLASS (AC):" Margin="10 30" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="4"/>
                            <TextBox x:Name="AC" IsEnabled="False" Height="25" Width="40" Grid.Column="5"/>
                            <TextBlock Text="SPEED:" Margin="10 30" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="6"/>
                            <TextBox x:Name="baseSpeed" IsEnabled="False" Height="25" Width="40" Grid.Column="7"/>

                        </Grid>

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">

                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="STRENGTH" Margin="10 30 10 10" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18" Grid.Column="0"/>
                                    <TextBox x:Name="strScoreText" Margin ="0 20 20 10" Padding ="5" Height="35" Width="60" IsEnabled="False" Grid.Column="1"/>
                                    <TextBox x:Name="strModifierText" Margin ="0 25 20 10" Padding ="5" Height="35" Width="60" Grid.Column="2" IsEnabled="false"/>
                                    <Button x:Name="strRoll_bt" Content="Roll" Click="StrButton_Click" Margin = "0 25 20 10" Height ="35" Width="60" IsEnabled="False" Grid.Column="3"/>
                                    <TextBox x:Name="strengthResult" Margin ="0 30 20 10" Padding ="5" Height="35" Width="60" Grid.Column="4" IsEnabled="false"/>

                                </Grid>

                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="DEXTERITY" Margin="10 10 10 10" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18" Grid.Column="0"/>
                                    <TextBox x:Name="dexScoreText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" IsEnabled="False" Grid.Column="1"/>
                                    <TextBox x:Name="dexModifierText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="2" IsEnabled="false"/>
                                    <Button x:Name="dexRoll_bt" Content="Roll" Click="DexButton_Click" Margin = "0 0 20 10" Height ="35" Width="60" IsEnabled="False" Grid.Column="3"/>
                                    <TextBox x:Name="dexResult" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="4" IsEnabled="false"/>

                                </Grid>

                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="CONSTITUTION" Margin="10 10 10 10" FontWeight="Bold" FontFamily="Times New Roman" FontSize="16" Grid.Column="0"/>
                                    <TextBox x:Name="conScoreText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" IsEnabled="False" Grid.Column="1"/>
                                    <TextBox x:Name="conModifierText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="2" IsEnabled="false"/>
                                    <Button x:Name="conRoll_bt" Content="Roll" Click="ConButton_Click" Margin = "0 0 20 10" Height="35" Width="60" IsEnabled="False" Grid.Column="3"/>
                                    <TextBox x:Name="conResult" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="4" IsEnabled="false"/>

                                </Grid>

                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="INTELLIGENCE" Margin="10 10 10 10" FontWeight="Bold" FontFamily="Times New Roman" FontSize="16" Grid.Column="0"/>
                                    <TextBox x:Name="intScoreText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" IsEnabled="False" Grid.Column="1"/>
                                    <TextBox x:Name="intModifierText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="2" IsEnabled="false"/>
                                    <Button x:Name="intRoll_bt" Content="Roll" Click="IntButton_Click" Margin = "0 0 20 10" Height="35" Width="60" IsEnabled="False" Grid.Column="3"/>
                                    <TextBox x:Name="intResult" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="4" IsEnabled="false"/>

                                </Grid>

                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="WISDOM" Margin="10 10 10 10" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18" Grid.Column="0"/>
                                    <TextBox x:Name="wisScoreText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" IsEnabled="False" Grid.Column="1"/>
                                    <TextBox x:Name="wisModifierText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="2" IsEnabled="false"/>
                                    <Button x:Name="wisRoll_bt" Content="Roll" Click="WisButton_Click" Margin = "0 0 20 10" Height="35" Width="60" IsEnabled="False" Grid.Column="3"/>
                                    <TextBox x:Name="wisResult" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="4" IsEnabled="false"/>

                                </Grid>

                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="CHARISMA" Margin="10 10 10 10" FontWeight="Bold" FontFamily="Times New Roman" FontSize="18" Grid.Column="0"/>
                                    <TextBox x:Name="chaScoreText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" IsEnabled="False" Grid.Column="1"/>
                                    <TextBox x:Name="chaModifierText" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="2" IsEnabled="false"/>
                                    <Button x:Name="chaRoll_bt" Content="Roll" Click="ChaButton_Click" Margin = "0 0 20 10" Height="35" Width="60" IsEnabled="False" Grid.Column="3"/>
                                    <TextBox x:Name="chaResult" Margin ="0 0 20 10" Padding ="5" Height="35" Width="60" Grid.Column="4" IsEnabled="false"/>

                                </Grid>

                            </StackPanel>

                            <StackPanel Grid.Column="1">

                                <StackPanel>

                                    <TextBlock Text="SAVING THROWS" Margin="50 40 50 20" FontFamily="Times New Roman" FontWeight="Bold" FontSize="18"/>

                                    <Grid>

                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width ="25"/>
                                            <ColumnDefinition Width ="100"/>
                                            <ColumnDefinition Width ="50"/>
                                            <ColumnDefinition Width ="70"/>
                                            <ColumnDefinition Width ="75"/>

                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="saveProf_STR" IsEnabled="False" Margin="10 10 0 10" Grid.Column="0"/>
                                        <TextBlock Text="Strength" IsEnabled="False" Margin="10 9 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
                                        <TextBox x:Name="STRsave_Val" IsEnabled="False"  Height="25" Width="40" Grid.Column="2"/>
                                        <Button x:Name="STRsave_roll" Click="STR_Save_bt_Click" IsEnabled="False" Content="Roll" Height="25" Width="40" Grid.Column="3"/>
                                        <TextBox x:Name="STRsave_Result" IsEnabled="False" Height="25" Width="40" Grid.Column="4"/>

                                    </Grid>

                                    <Grid>

                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width ="25"/>
                                            <ColumnDefinition Width ="100"/>
                                            <ColumnDefinition Width ="50"/>
                                            <ColumnDefinition Width ="70"/>
                                            <ColumnDefinition Width ="75"/>

                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="saveProf_DEX" IsEnabled="False" Margin="10 10 0 10" Grid.Column="0"/>
                                        <TextBlock Text="Dexterity" IsEnabled="False" Margin="10 9 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
                                        <TextBox x:Name="DEXsave_Val" IsEnabled="False"  Height="25" Width="40" Grid.Column="2"/>
                                        <Button x:Name="DEXsave_roll" Click="DEX_Save_bt_Click" IsEnabled="False" Content="Roll" Height="25" Width="40" Grid.Column="3"/>
                                        <TextBox x:Name="DEXsave_Result" IsEnabled="False" Height="25" Width="40" Grid.Column="4"/>

                                    </Grid>

                                    <Grid>

                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width ="25"/>
                                            <ColumnDefinition Width ="100"/>
                                            <ColumnDefinition Width ="50"/>
                                            <ColumnDefinition Width ="70"/>
                                            <ColumnDefinition Width ="75"/>

                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="saveProf_CON" IsEnabled="False" Margin="10 10 0 10" Grid.Column="0"/>
                                        <TextBlock Text="Constitution" IsEnabled="False" Margin="10 9 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
                                        <TextBox x:Name="CONsave_Val" IsEnabled="False" Height="25" Width="40" Grid.Column="2"/>
                                        <Button x:Name="CONsave_roll" Click="CON_Save_bt_Click" IsEnabled="False" Content="Roll" Height="25" Width="40" Grid.Column="3"/>
                                        <TextBox x:Name="CONsave_Result" IsEnabled="False" Height="25" Width="40" Grid.Column="4"/>

                                    </Grid>

                                    <Grid>

                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width ="25"/>
                                            <ColumnDefinition Width ="100"/>
                                            <ColumnDefinition Width ="50"/>
                                            <ColumnDefinition Width ="70"/>
                                            <ColumnDefinition Width ="75"/>

                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="saveProf_INT" IsEnabled="False" Margin="10 10 0 10" Grid.Column="0"/>
                                        <TextBlock Text="Intelligence" IsEnabled="False" Margin="10 9 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
                                        <TextBox x:Name="INTsave_Val" IsEnabled="False" Height="25" Width="40" Grid.Column="2"/>
                                        <Button x:Name="INTsave_roll" Click="INT_Save_bt_Click" IsEnabled="False" Content="Roll" Height="25" Width="40" Grid.Column="3"/>
                                        <TextBox x:Name="INTsave_Result" IsEnabled="False" Height="25" Width="40" Grid.Column="4"/>

                                    </Grid>

                                    <Grid>

                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width ="25"/>
                                            <ColumnDefinition Width ="100"/>
                                            <ColumnDefinition Width ="50"/>
                                            <ColumnDefinition Width ="70"/>
                                            <ColumnDefinition Width ="75"/>

                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="saveProf_WIS" IsEnabled="False" Margin="10 10 0 10" Grid.Column="0"/>
                                        <TextBlock Text="Wisdom" IsEnabled="False" Margin="10 9 10 10" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Grid.Column="1"/>
                                        <TextBox x:Name="WISsave_Val" IsEnabled="False" Height="25" Width="40" Grid.Column="2"/>
                                        <Button x:Name="WISsave_roll" Click="WIS_Save_bt_Click" IsEnabled="False" Content="Roll" Height="25" Width="40" Grid.Column="3"/>
                                        <TextBox x:Name="WISsave_Result" IsEnabled="False" Height="25" Width="40" Grid.Column="4"/>

                                    </Grid>

                                    <Grid>

                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width ="25"/>
                                            <ColumnDefinition Width ="100"/>
                                            <ColumnDefinition Width ="50"/>
                                            <ColumnDefinition Width ="70"/>
                                            <ColumnDefinition Width ="75"/>

