                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="CasterClassTxt" Margin="15 5 25 10" FontSize="16" FontWeight="Bold" Background="Azure" Grid.Column="0"/>
