<Window x:Class="DnD_CharSheet_5e.CharacterCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_CharSheet_5e"
        mc:Ignorable="d"
        Title="CharacterCreationWindow" Height="1000" Width="1500">
    

    <StackPanel>

        <Grid Margin="30">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Previous_Btn" IsEnabled="False" Click="Previous_Btn_Click" Grid.Column="0" Content="PREVIOUS" Height="40" Width="150" FontWeight="Bold" FontSize="18"/>
            <Button x:Name="Next_Btn" IsEnabled="False" Click="Next_Btn_Click" Grid.Column="1" Content="NEXT" Height="40" Width="150" FontWeight="Bold" FontSize="18"/>

        </Grid>
        
        <Frame x:Name="CharCreate_MainFrame" NavigationUIVisibility="Hidden"/>
        
    </StackPanel>
</Window>
