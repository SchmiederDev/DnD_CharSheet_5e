<Page x:Class="DnD_CharSheet_5e.LoadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnD_CharSheet_5e"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadPage">

    <StackPanel>

        <Button x:Name="Cancel_BT" Content="X" Height="40" Width="50" Margin ="600 30 10 10" FontSize="24"/>

        <Button x:Name="saveGame_01_bt" Content="Empty Slot" Height="30" Width="500" Margin="10 50 10 10" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="saveGame_02_bt" IsEnabled="False" Content="Empty Slot" Height="30" Width="500" Margin="10 30 10 10" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="saveGame_03_bt" IsEnabled="False" Content="Empty Slot" Height="30" Width="500" Margin="10 30 10 10" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="saveGame_04_bt" IsEnabled="False" Content="Empty Slot" Height="30" Width="500" Margin="10 30 10 10" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="saveGame_05_bt" IsEnabled="False" Content="Empty Slot" Height="30" Width="500" Margin="10 30 10 10" FontWeight="Bold" FontSize="18"/>

    </StackPanel>
</Page>
